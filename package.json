{
  "name": "rmapi-js",
  "version": "3.0.2",
  "description": "JavaScript implementation of the reMarkable 1.5 api",
  "repository": "git@github.com:erikbrinkman/rmapi-js.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "keywords": [
    "remarkable"
  ],
  "types": "./dist/index.d.ts",
  "module": "bundle/rmapi-js.esm.min.js",
  "main": "bundle/rmapi-js.cjs.min.js",
  "unpkg": "bundle/rmapi-js.iife.min.js",
  "files": [
    "./bundle/*.js",
    "./dist/**/*.js",
    "./dist/**/*.d.ts"
  ],
  "packageManager": "yarn@3.6.1",
  "scripts": {
    "doc": "pnpify typedoc",
    "fmt": "pnpify prettier --cache --write 'src/*.ts' '*.json'",
    "lint:es": "pnpify eslint --cache 'src/*.ts'",
    "lint:doc": "pnpify typedoc --emit none",
    "lint": "pnpify tsc && yarn lint:es && yarn lint:doc",
    "test": "jest --coverage",
    "build": "pnpify tsc -p tsconfig.build.json && esbuild src/index.ts --bundle --minify --platform=node --outfile=bundle/rmapi-js.cjs.min.js && yarn esbuild src/index.ts --bundle --minify --platform=browser --outfile=bundle/rmapi-js.iife.min.js && yarn esbuild src/index.ts --bundle --minify --platform=neutral --outfile=bundle/rmapi-js.esm.min.js --main-fields=module,main",
    "prepack": "yarn lint && yarn test && yarn build"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "base64-js": "^1.5.1",
    "json-stable-stringify": "^1.1.0",
    "jtd": "^0.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.9.6",
    "@types/jest": "^29.5.10",
    "@types/json-stable-stringify": "^1.0.36",
    "@types/node": "^20.10.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@yarnpkg/pnpify": "^4.0.1",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "spellcheck",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:jest/recommended",
      "prettier"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "env": {
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "tsdoc/syntax": "error",
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "Ballpointv",
            "Finelinerv",
            "Garamond",
            "Highlighterv",
            "Maison",
            "Markable",
            "Markerv",
            "Neue",
            "Noto",
            "Paintbrushv",
            "Pencilv",
            "authed",
            "bigints",
            "docid",
            "ebooks",
            "epub",
            "fineliner",
            "goog",
            "iife",
            "incrementing",
            "linux",
            "macos",
            "movee",
            "rmapi",
            "subfiles",
            "urls",
            "webcrypto"
          ],
          "skipIfMatch": [
            "^[0-9a-f]{64}"
          ],
          "minLength": 4
        }
      ]
    }
  }
}
