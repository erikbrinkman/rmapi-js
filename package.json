{
  "name": "rmapi-js",
  "version": "0.0.2",
  "description": "JavaScript implementation of the reMarkable 1.5 api",
  "repository": "git@github.com:erikbrinkman/rmapi-js.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "keywords": [
    "remarkable"
  ],
  "types": "dist/index.d.ts",
  "module": "bundle/rmapi-js.esm.min.js",
  "main": "bundle/rmapi-js.cjs.min.js",
  "unpkg": "bundle/rmapi-js.iife.min.js",
  "files": [
    "/bundle/*.js",
    "/dist/**/*.js",
    "/dist/**/*.d.ts"
  ],
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "doc": "typedoc",
    "fmt": "prettier --write 'src/*.ts' '*.json' 'bundle.mjs'",
    "lint": "tsc && eslint --cache 'src/*.ts' 'bundle.mjs' && typedoc --emit none",
    "test": "jest --coverage",
    "build": "tsc -p tsconfig.build.json && yarn node bundle.mjs",
    "prepack": "yarn lint && yarn test && yarn build"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/babel__core": "^7.1.19",
    "@types/babel__preset-env": "^7.9.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.31",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.4",
    "babel-jest": "^28.0.3",
    "chalk": "^4.1.2",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-tsdoc": "^0.2.16",
    "jest": "^28.0.3",
    "jtd": "^0.1.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "spellcheck",
      "eslint-plugin-tsdoc"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "tsdoc/syntax": "error",
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "fixme"
          ],
          "location": "anywhere"
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "identifiers": false,
          "skipWords": [
            "Ballpointv",
            "Finelinerv",
            "Garamond",
            "Highlighterv",
            "Maison",
            "Markable",
            "Markerv",
            "Neue",
            "Noto",
            "Paintbrushv",
            "Pencilv",
            "authed",
            "ebooks",
            "epub",
            "fineliner",
            "goog",
            "iife",
            "incrementing",
            "linux",
            "rmapi",
            "subfiles",
            "urls",
            "webcrypto"
          ],
          "minLength": 4
        }
      ]
    }
  }
}
